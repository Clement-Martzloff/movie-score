{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src/**/*.ts", "bin/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
